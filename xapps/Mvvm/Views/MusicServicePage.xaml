<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xapps.MusicServicePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" Padding="20,0,20,0">
            <Button Text="Play Music" BorderWidth="1" Clicked="MusicBntPlayClicked" />
            <Button Text="Stop Music" BorderWidth="1" Clicked="MusicBntStopClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>