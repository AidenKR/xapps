<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="Database Test" x:Class="xapps.DatabasePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20,0,20,0">
            <Button Text="Create Table" BorderWidth="1" Clicked="OnCreateClicked" />
            <Button Text="Drop Table" BorderWidth="1" Clicked="OnDropClicked" />
            <Button Text="Insert Data" BorderWidth="1" Clicked="OnInsertClicked" />
            <Button Text="Select All Data" BorderWidth="1" Clicked="OnSelectAllClicked" />
            <Button Text="Delete All Data" BorderWidth="1" Clicked="OnDeleteAllClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>