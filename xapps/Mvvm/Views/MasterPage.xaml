<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="xapps.MasterPage" Padding="0,40,0,0" Icon="hamburger.png" Title="Personal Organiser">
    <StackLayout Margin="20,0,20,10">
        <ListView x:Name="listView" SeparatorVisibility="Default" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Title}" VerticalOptions="Center" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Padding="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Text="Net Test" VerticalOptions="CenterAndExpand" BorderWidth="1" BorderColor="Blue" />
            <Button Grid.Column="1" Text="DB  Test" VerticalOptions="CenterAndExpand" BorderWidth="1" BorderColor="Blue" />
        </Grid>
    </StackLayout>
</ContentPage>